<launch>

  <arg name="gui" default="true" />

  <arg name="INPUT_IMAGE" value="/image_publisher/output" />
  <arg name="MANAGER" value="smoothing_filter_manager" />

  <node name="$(arg MANAGER)"
        pkg="nodelet" type="nodelet"
        args="manager"/>

  <node name="image_publisher"
        pkg="jsk_perception" type="image_publisher.py">
    <rosparam subst_value="true">
      file_name: $(find jsk_perception)/sample/image/laugh_out_loud_joke_book.jpg
    </rosparam>
  </node>

  <node name="bilateral_filter"
        pkg="nodelet" type="nodelet"
        args="load jsk_perception/BilateralFilter $(arg MANAGER)">
    <remap from="~input" to="/image_publisher/output" />
  </node>

  <node name="gaussian_filter"
        pkg="nodelet" type="nodelet"
        args="load jsk_perception/GaussianFilter $(arg MANAGER)">
    <remap from="~input" to="/image_publisher/output" />
  </node>

  <node name="median_filter"
        pkg="nodelet" type="nodelet"
        args="load jsk_perception/MedianFilter $(arg MANAGER)">
    <remap from="~input" to="/image_publisher/output" />
  </node>


  <group if="$(arg gui)">
    <node name="image_view0"
          pkg="image_view" type="image_view">
      <remap from="image" to="$(arg INPUT_IMAGE)" />
    </node>
    <node name="image_view1"
          pkg="image_view" type="image_view">
      <remap from="image" to="/bilateral_filter/output" />
    </node>
    <node name="image_view2"
          pkg="image_view" type="image_view">
      <remap from="image" to="/gaussian_filter/output" />
    </node>
    <node name="image_view3"
          pkg="image_view" type="image_view">
      <remap from="image" to="/median_filter/output" />
    </node>
  </group>

</launch>
