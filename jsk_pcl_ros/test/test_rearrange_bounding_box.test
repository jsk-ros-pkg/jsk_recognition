<launch>

  <include file="$(find jsk_pcl_ros)/sample/sample_rearrange_bounding_box.launch">
    <arg name="gui" value="false" />
    <arg name="debug" value="true" />
  </include>

  <test test-name="test_rearrange_bounding_box"
        name="test_rearrange_bounding_box"
        pkg="jsk_tools" type="test_topic_published.py"
        time-limit="360" retry="3">
    <rosparam>
      topic_0: /rearrange_bounding_box/output
      timeout_0: 30
    </rosparam>
  </test>

  <test test-name="test_rearrange_bounding_box_rotation"
        name="test_rearrange_bounding_box_rotation"
        pkg="jsk_tools" type="test_topic_published.py">
    <rosparam>
      topic_0: /rearrange_bounding_box_check/output
      timeout_0: 30
      condition_0: "len(m.boxes) &gt; 0 and abs(m.boxes[0].pose.orientation.x) &lt; 1e-7 and abs(m.boxes[0].pose.orientation.y) &lt; 1e-7 and abs(m.boxes[0].pose.orientation.z) &lt; 1e-7 and abs(m.boxes[0].pose.orientation.w - 1.0) &lt; 1e-7"
    </rosparam>
  </test>

</launch>
