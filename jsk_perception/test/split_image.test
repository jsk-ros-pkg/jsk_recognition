<launch>

  <include file="$(find jsk_perception)/sample/sample_split_image.launch">
    <arg name="gui" value="false" />
  </include>

  <!-- test for nodelet version -->
  <node name="split_image_nodelet"
        pkg="nodelet" type="nodelet"
        args="standalone jsk_perception/SplitImage" >
    <remap from="~input" to="image_publisher/image_color" />
    <remap from="~output/vertical00/horizontal00" to="left_camera/image_raw" />
    <remap from="~output/vertical00/horizontal01" to="right_camera/image_raw" />
    <rosparam>
      vertical_parts: 1
      horizontal_parts: 2
    </rosparam>
  </node>

  <test test-name="test_image_publisher"
        name="test_image_publisher"
        pkg="jsk_tools" type="test_topic_published.py">
    <rosparam>
      topic_0: /split_image/output/vertical00/horizontal00
      timeout_0: 10
      topic_1: /split_image/output/vertical00/horizontal01
      timeout_1: 10
      topic_2: /split_image/output/vertical01/horizontal00
      timeout_0: 10
      topic_3: /split_image/output/vertical01/horizontal01
      timeout_0: 10
      topic:4: /left_camera/image_raw
      timeout_0: 10
      topic:5: /right_camera/image_raw
      timeout_0: 10
    </rosparam>
  </test>

</launch>
